.overall
  .header
    = link_to root_path do
      = image_tag "material/logo/logo.png"
  .contents
    .title
      購入内容の確認
    .product
      .product__image
        = image_tag ("#{@item.images.first.image}")
      .product__details
        .product__name
          = @item.name
        .casher
          .money
            = "#{@item.price}円"
          .postage
            送料込み
    %ul
      %li.price__title
        支払い金額
      %li.price__total
        = "#{@item.price}円"
    .payment
      %ul
        %li.payment__title
          支払い方法
        %li
          = link_to "変更する", creditcard_index_path
      %p
        クレジットカード
        %br
        %br
        = "**** **** **** " + "#{@default_card_information.last4}"
        %br
        - exp_month = @default_card_information.exp_month.to_s
        - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
        = "有効期限 " + exp_month + " / " + exp_year
    .shipping
      %ul
        %li.shipping__title
          配送先
        %li
          %a{href: "#"} 変更する
      .shipping__address
        〇〇県▲▲市
    .buy
    = form_tag(action: :pay, method: :post) do
      %button{type:'submit'}
        購入する