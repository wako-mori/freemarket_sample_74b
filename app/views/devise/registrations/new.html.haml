.wrapper
  .top
    = link_to root_path do
      = image_tag 'material/logo/logo.png', class: "top__image"
  = form_for(@user, url: user_registration_path) do |f|  
    .main   
      .main__box
        %h2.main__box__top 会員情報入力
        = render "devise/shared/error_messages", resource: @user 
        .main__box__bottom
          .main__box__bottom__content
            .main__box__bottom__content__group1
              %label ニックネーム
              %span 必須
              = f.text_field :nickname, autofocus: true, class:"main__box__bottom__content__group1__form",autocomplete: "nickname", placeholder: "例）フリマ太郎"
            .main__box__bottom__content__group2
              %label メールアドレス
              %span 必須
              = f.email_field :email, autocomplete: "email", class: "main__box__bottom__content__group2__form", placeholder: "PC・携帯どちらでも可"
            .main__box__bottom__content__group2
              %label パスワード
              %span 必須
              = f.password_field :password, class: "main__box__bottom__content__group2__form", placeholder: "7文字以上の半角英数字", autocomplete: "new-password"
              %p.form__text ※英字と数字の両方を含めて入力してください
              .main__box__bottom__content__group2__box
                %label.main__box__bottom__content__group2__box__label 
                  %input{class:"main__box__bottom__content__group2__box__label__checkbox", type: "checkbox", style: "transform:scale(2.0)"}
                  .main__box__bottom__content__group2__box__label__text パスワードを表示する
            .main__box__bottom__content__group2
              %h3 本人確認
              %h4 安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。
            .main__box__bottom__content__group3
              %div
                %label お名前（全角）
                %span 必須
              %div.main__box__bottom__content__group3__box
                = f.text_field :family_name, class: "main__box__bottom__content__group3__box__form1", placeholder: "例）山田"
                = f.text_field :first_name, class: "main__box__bottom__content__group3__box__form2", placeholder: "例）彩"
            .main__box__bottom__content__group3
              %div
                %label お名前カナ（全角）
                %span 必須
              %div.main__box__bottom__content__group3__box
                = f.text_field :family_name_kana, class: "main__box__bottom__content__group3__box__form1", placeholder: "例）ヤマダ"
                = f.text_field :first_name_kana, class: "main__box__bottom__content__group3__box__form2", placeholder: "例）アヤ"
            .main__box__bottom__content__group3
              %label 生年月日
              %span 必須
              .main__box__bottom__content__group3__box
                .main__box__bottom__content__group3__box__barthday
                  =raw sprintf(f.date_select(:birthday, with_css_classes:'XXXXX', prompt:"--",use_month_numbers:true, start_year:Time.now.year, end_year:1900, date_separator:'%s'),'年','月')+'日'
                  -# = f.date_select :birthday, use_month_numbers: true, start_year: 1970, end_year: Time.now.year, default: Time.now(), {}, {class: "main__box__bottom__content__group3__box__barthday__year"} 
                  = icon("fa", "check", class: "main__box__bottom__content__group3__box__barthday__icon1")
                  = icon("fa", "check", class: "main__box__bottom__content__group3__box__barthday__icon2")
                  = icon("fa", "check", class: "main__box__bottom__content__group3__box__barthday__icon3")
            %p ※ 本人情報は正しく入力してください。会員登録後、修正するにはお時間を頂く場合があります。   
            .main__box__bottom__content__group4
              %p
                「登録」のボタンを押すことにより、
                =link_to "利用規約", "#", target: "_blank", class: "main__box__bottom__content__group4__text" 
                に同意したものとみなします
                = f.submit "登録", class:"main__box__bottom__content__btn"
            .main__box__bottom__content__group5
              = link_to "本人確認登録について＞", "#", target: "_blank", class: "main__box__bottom__content__group5__text"
            .main__box__bottom__content__group6
              %h5
                This site is protected by reCAPTCHA and the Google 
                = link_to "Privacy Policy", "#", class: "main__box__bottom__content__group6__text"
                and
                = link_to "Teams Of Servise", "#", class: "main__box__bottom__content__group6__text"
                apply.
    .bottom 
      .bottom__box 
        %ul
          %li
            =link_to "プライバシーポリシー", "#", class: "bottom__box__text" 
          %li
            =link_to "メルカリ利用規約", "#", class: "bottom__box__text"
          %li
            =link_to "特定商取引に関する表記", "#", class: "bottom__box__text"  
        = link_to root_path do
          = image_tag 'material/logo/logo-white.png', class: "bottom__box__image"
        %h6 
          ©︎FURIMA,inc


